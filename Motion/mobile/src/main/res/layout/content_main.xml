<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context="edu.sonoma.cs370.motion.Settings"
    android:background="@drawable/background" >

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/startActivity"
        android:alpha=".65"
        android:background="@drawable/startactivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:id="@+id/calories"
        android:alpha=".65"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:longClickable="false" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/settings"
        android:alpha=".65"
        android:background="@drawable/settingsbutton2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="goToSettingsActivity" />

</RelativeLayout>

